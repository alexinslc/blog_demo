# Docker Environment Variables
# Copy this file to .env and customize for your environment

# Rails Environment
RAILS_ENV=production

# Secret Key Base
# Generate with: docker run --rm -it ruby:3.3.6-slim ruby -rsecurerandom -e 'puts SecureRandom.hex(64)'
SECRET_KEY_BASE=your_secret_key_here

# Database (if using PostgreSQL instead of SQLite)
# DATABASE_URL=postgresql://user:password@db:5432/blog_demo_production

# Rails Settings
RAILS_LOG_TO_STDOUT=true
RAILS_SERVE_STATIC_FILES=true
RAILS_MAX_THREADS=5

# Application Settings
WEB_CONCURRENCY=2
